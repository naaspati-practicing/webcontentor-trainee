.container.mt-2
  .card.card-block
    .card-body
      mixin clstr(title, cluster_name)
        nav.navbar.navbar-dark.bg-secondary.mb-1
          h1.navbar-brand.mb-0=title
        table.table.table-hover(app-nodes)
          tr(app-node-row, *ngFor=`let node of ${cluster_name}` '[node]'='node')
      
      +clstr('Cluster 1', 'cluster1')
      +clstr('Cluster 2', 'cluster2')
